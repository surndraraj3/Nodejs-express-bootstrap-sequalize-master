{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "vars-on-top": 2,
    "no-undef": 2,
    "arrow-parens": [0, "never"],
    "class-methods-use-this": 0,
    "comma-dangle": [2, "never"],
    "import/prefer-default-export" : 0,
    "linebreak-style": 0,
    "max-len": 0,
    "spaced-comment": [1, "always"]
  }
}
